---
permalink: /sitemap.xsl
eleventyExcludeFromCollections: true
---
<?xml version="1.0" encoding="UTF-8"?>
<xsl:stylesheet version="2.0"
                xmlns:html="http://www.w3.org/TR/REC-html40"
                xmlns:image="http://www.google.com/schemas/sitemap-image/1.1"
                xmlns:sitemap="http://www.sitemaps.org/schemas/sitemap/0.9"
                xmlns:xsl="http://www.w3.org/1999/XSL/Transform">
  <xsl:output method="html" version="1.0" encoding="UTF-8" indent="yes"/>
  <xsl:template match="/">
    <html xmlns="http://www.w3.org/1999/xhtml">
      <head>
        <title>Sitemap | {{ metadata.title }}</title>
        <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
        <link rel="preconnect" href="https://fonts.googleapis.com" />
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin="" />
        <link href="https://fonts.googleapis.com/css2?family=Orbitron:wght@700&amp;family=Share+Tech+Mono&amp;display=swap" rel="stylesheet" />
        <style type="text/css">
          * { box-sizing: border-box; }
          body {
            font-family: "Share Tech Mono", monospace;
            font-size: 14px;
            color: #a1a1aa;
            background: #0a0a0f;
            margin: 0;
            padding: 0;
          }
          h1 {
            font-family: "Orbitron", sans-serif;
            color: #FFE500;
            font-size: 28px;
            margin-bottom: 8px;
            text-transform: uppercase;
            letter-spacing: 0.05em;
          }
          #content {
            margin: 0 auto;
            max-width: 960px;
            padding: 60px 20px;
          }
          .terminal-header {
            display: flex;
            align-items: center;
            gap: 8px;
            margin-bottom: 24px;
            padding-bottom: 16px;
            border-bottom: 1px solid rgba(255, 229, 0, 0.3);
          }
          .terminal-dot {
            width: 12px;
            height: 12px;
            border-radius: 0;
          }
          .terminal-dot.red { background: #ef4444; }
          .terminal-dot.yellow { background: #eab308; }
          .terminal-dot.green { background: #22c55e; }
          .terminal-path {
            margin-left: 8px;
            color: #71717a;
          }
          .expl {
            margin: 18px 0;
            line-height: 1.6;
            color: #71717a;
          }
          .expl a, a {
            color: #FFE500;
            text-decoration: none;
          }
          a:hover {
            color: #fff;
            text-decoration: underline;
          }
          table {
            width: 100%;
            border: 1px solid rgba(255, 229, 0, 0.3);
            border-collapse: collapse;
            margin-top: 24px;
          }
          th {
            text-align: left;
            padding: 12px 16px;
            font-size: 12px;
            text-transform: uppercase;
            letter-spacing: 0.1em;
            color: #FFE500;
            background: rgba(255, 229, 0, 0.1);
            border-bottom: 1px solid rgba(255, 229, 0, 0.3);
            font-family: "Orbitron", sans-serif;
          }
          td {
            font-size: 13px;
            padding: 12px 16px;
            border-bottom: 1px solid rgba(255, 229, 0, 0.1);
          }
          tr:hover td {
            background: rgba(255, 229, 0, 0.05);
          }
          tr:hover td a {
            color: #fff;
          }
          .cmd-prefix {
            color: #FFE500;
            margin-right: 8px;
          }
          .footer {
            text-align: center;
            margin-top: 48px;
            padding-top: 24px;
            border-top: 1px solid rgba(255, 229, 0, 0.2);
            font-size: 12px;
            color: #52525b;
          }
          .footer p {
            margin: 4px 0;
          }
        </style>
      </head>
      <body>
        <div id="content">
          <div class="terminal-header">
            <span class="terminal-dot red"></span>
            <span class="terminal-dot yellow"></span>
            <span class="terminal-dot green"></span>
            <span class="terminal-path">~/sitemap.xml</span>
          </div>

          <h1>{{ metadata.title }} Sitemap</h1>

          <p class="expl">
            <span class="cmd-prefix">$</span> cat sitemap.xml<br/>
            Generated by <a href="https://11ty.dev">Eleventy</a> for search engine consumption.<br/>
            More info at <a href="http://sitemaps.org">sitemaps.org</a>.
          </p>
          <p class="expl">
            <span class="cmd-prefix">$</span> cd <a href="/">~/home</a>
          </p>

          <xsl:if test="count(sitemap:sitemapindex/sitemap:sitemap) &gt; 0">
            <p class="expl">
              <span class="cmd-prefix">$</span> ls -la | wc -l<br/>
              <xsl:value-of select="count(sitemap:sitemapindex/sitemap:sitemap)"/> sitemaps found
            </p>
            <table id="sitemap" cellpadding="3">
              <thead>
                <tr>
                  <th width="75%">Sitemap</th>
                  <th width="25%">Modified</th>
                </tr>
              </thead>
              <tbody>
                <xsl:for-each select="sitemap:sitemapindex/sitemap:sitemap">
                  <xsl:variable name="sitemapURL">
                    <xsl:value-of select="sitemap:loc"/>
                  </xsl:variable>
                  <tr>
                    <td>
                      <a href="{$sitemapURL}"><xsl:value-of select="sitemap:loc"/></a>
                    </td>
                    <td>
                      <xsl:value-of select="concat(substring(sitemap:lastmod,0,11),concat(' ', substring(sitemap:lastmod,12,5)),concat(' ', substring(sitemap:lastmod,20,6)))"/>
                    </td>
                  </tr>
                </xsl:for-each>
              </tbody>
            </table>
          </xsl:if>

          <xsl:if test="count(sitemap:sitemapindex/sitemap:sitemap) &lt; 1">
            <p class="expl">
              <span class="cmd-prefix">$</span> find . -type f | wc -l<br/>
              <xsl:value-of select="count(sitemap:urlset/sitemap:url)"/> URLs indexed
            </p>
            <table id="sitemap" cellpadding="3">
              <thead>
                <tr>
                  <th width="85%">URL</th>
                  <th width="15%">Modified</th>
                </tr>
              </thead>
              <tbody>
                <xsl:for-each select="sitemap:urlset/sitemap:url">
                  <tr>
                    <td>
                      <xsl:variable name="itemURL">
                        <xsl:value-of select="sitemap:loc"/>
                      </xsl:variable>
                      <a href="{$itemURL}">
                        <xsl:value-of select="sitemap:loc"/>
                      </a>
                    </td>
                    <td>
                      <xsl:value-of select="concat(substring(sitemap:lastmod,0,11),concat(' ', substring(sitemap:lastmod,12,5)))"/>
                    </td>
                  </tr>
                </xsl:for-each>
              </tbody>
            </table>
          </xsl:if>

          <div class="footer">
            <p><span class="cmd-prefix">$</span> date</p>
            <p>{{ build.timestamp.formatted }}</p>
            <p>&#169; {{ build.timestamp.year }} {{ metadata.title }}</p>
          </div>
        </div>
      </body>
    </html>
  </xsl:template>
</xsl:stylesheet>
